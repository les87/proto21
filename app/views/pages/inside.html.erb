<h1>Proto</h1>
<p>Welcome to Proto</p>
<p>Hello World</strong></p>


<%= link_to "Book a Call", calls_path %>

<% if current_user.engineer? %>
<br>


    <div class="text-center">
      <p><%= page_entries_info @calls %></p>
      <%= paginate @calls%><BR>

    </div>

    <table class="table table-bordered">
      <tr>

    <tr>

      <th>Call ID</th>
      <th>Serial Number</th>
      <th>Description</th>
      <th>Engineer Comment</th>
      <th>Status</th>
      <th>Logged By User</th>
      <th>Time Logged</th>

      <% @calls.each do |call| %>

        <tr>
          <td><%= call.id %></td>
          <td><%= call.serial_number %></td>
          <td><%= call.description %></td>
          <td><%= call.engineer_comment %></td>
          <td><%= call.status %></td>
          <td><%= call.logged_by %></td>
          <td><%= call.created_at.to_formatted_s(:long_ordinal) %></td>
        </tr>


    <% end %>
</table>

<% end %>